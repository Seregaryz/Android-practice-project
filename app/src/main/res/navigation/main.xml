<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/disputes_list"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.DisputesListFragment"
        android:label="Disputes"
        tools:layout="@layout/fragment_disputes" />
    <fragment
        android:id="@+id/shop_fragment"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.ShopFragment"
        android:label="Shop"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/dispute_creating_fragment"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.DisputeCreatingFragment"
        android:label="Create your dispute"
        tools:layout="@layout/fragment_create_dispute" />
    <fragment
        android:id="@+id/liked_disputes_fragment"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.LikedDisputesFragment"
