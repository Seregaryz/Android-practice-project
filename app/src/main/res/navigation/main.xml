        tools:layout="@layout/fragment_liked_disputes" />
    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.ProfileFragment"
        android:label="Your profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.SignUpFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.SignInFragment"
        android:label="Login to your account"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/disputeFragment"
        android:name="com.kfu.itis.androidpracticeproject.view.fragments.DisputeFragment"
